{
  "ignoredColumns": ["url", "notes"],
  "columnAliases": { "price_inr": "Price" ,
                     "ram_gb_sum": "Memory" ,
                     "storage_tb_sum": "Disk Space TB" , 
                     "carry_weight": "Weight" 
                     },

  "constraints": {
    "includeColumns": ["ram_gb_sum", "storage_tb_sum", "price_inr", "portable", "coding_compatible", "apple_pencil_compatible"],
    "defaults": {
      "numeric": { "useDatasetRange": true },
      "categorical": { "includes": "", "exact": false }
    },
    "overrides": {
      "price_inr": { "min": 90000, "max": 130000 },
      "ram_gb_sum": { "min": 16, "max": 32 },
      "chip": { "includes": "M4 Pro,M4 Max" }
    }
  },

  "tradeoffs": {
    "selected": ["price_inr", "carry_weight", "battery_hours"],
    "defaults": { "weight": 1, "direction": "lower" },
    "overrides": {
      "power_adequacy_score": { "direction": "higher", "weight": 2 },
      "battery_hours": { "direction": "higher" }
    }
  }
}
